<!DOCTYPE html>
<html lang="tr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="stylesheet" href="/css/home/home.css">
</head>
<body>

  <div class="main-container">
    <!-- Logo -->
    <img src="/img/logo1.png" alt="Logo" class="logo">

    <!-- Arama Formu -->
    <form id="search-form" class="search-container">
      <input type="text" id="author-query" placeholder="Yazar adı girin">
      <button type="submit">Search</button>
    </form>
  </div>

  <!-- SerpApi ile yazar arama -->
  <script>
    document.getElementById('search-form').addEventListener('submit', async function (e) {
      e.preventDefault();

      const query = document.getElementById('author-query').value.trim();
      if (!query) return;

      try {
        const res = await fetch(`/search-author?q=${encodeURIComponent(query)}`);
        const data = await res.json();

        if (data.author_id) {
          console.log("Bulunan author_id:", data.author_id);
          window.location.href = `/author/${data.author_id}`;
        } else {
          console.warn("Yazar bulunamadı.");
        }
      } catch (err) {
        console.error("API hatası:", err);
      }
    });
  </script>

</body>
</html>
