<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
        }
        
        .container {
            background: white;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
        }
        
        h1 {
            text-align: center;
            color: #333;
            margin-bottom: 30px;
            font-size: 2.5em;
        }
        
        .form-group {
            margin-bottom: 25px;
        }
        
        label {
            display: block;
            margin-bottom: 8px;
            font-weight: bold;
            color: #333;
            font-size: 1.1em;
        }
        
        textarea {
            width: 100%;
            min-height: 150px;
            padding: 15px;
            border: 2px solid #ddd;
            border-radius: 8px;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            font-size: 14px;
            resize: vertical;
            transition: border-color 0.3s;
        }
        
        textarea:focus {
            outline: none;
            border-color: #667eea;
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
        }
        
        .compare-abstract {
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            padding: 20px;
            margin: 15px 0;
            border-radius: 10px;
            border-left: 5px solid #667eea;
            position: relative;
        }
        
        .abstract-number {
            position: absolute;
            top: -10px;
            left: 20px;
            background: #667eea;
            color: white;
            padding: 5px 15px;
            border-radius: 15px;
            font-size: 12px;
            font-weight: bold;
        }
        
        button {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 12px 24px;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            font-size: 16px;
            margin: 5px;
            transition: transform 0.2s, box-shadow 0.2s;
            font-weight: bold;
        }
        
        button:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.2);
        }
        
        button:disabled {
            background: #6c757d;
            cursor: not-allowed;
            transform: none;
            box-shadow: none;
        }
        
        .btn-group {
            text-align: center;
            margin: 20px 0;
        }
        
        .result {
            margin-top: 30px;
            padding: 25px;
            background: #f8f9fa;
            border-radius: 10px;
            white-space: pre-wrap;
            line-height: 1.8;
            font-size: 15px;
            border: 1px solid #dee2e6;
        }
        
        .loading {
            text-align: center;
            color: #667eea;
            font-style: italic;
            background: linear-gradient(135deg, #e3f2fd 0%, #bbdefb 100%);
        }
        
        .error {
            background: linear-gradient(135deg, #ffebee 0%, #ffcdd2 100%);
            color: #c62828;
            border: 1px solid #f5c6cb;
        }
        
        .success {
            background: linear-gradient(135deg, #e8f5e8 0%, #c8e6c9 100%);
            color: #2e7d32;
            border: 1px solid #c3e6cb;
        }
        
        .navigation {
            text-align: center;
            margin-bottom: 20px;
        }
        
        .nav-link {
            color: white;
            text-decoration: none;
            background: rgba(255,255,255,0.2);
            padding: 10px 20px;
            border-radius: 25px;
            margin: 0 10px;
            transition: background 0.3s;
        }
        
        .nav-link:hover {
            background: rgba(255,255,255,0.3);
            text-decoration: none;
        }
    </style>
</head>
<body>
    <div class="navigation">
        <a href="/" class="nav-link">🏠 Ana Sayfa</a>
        <a href="/author" class="nav-link">👤 Yazar Sayfası</a>
        <a href="/compare" class="nav-link">🔍 Abstract Karşılaştır</a>
    </div>

    <div class="container">
        <h1>📚 Abstract Karşılaştırma Sistemi</h1>
        
        <form id="compareForm">
            <div class="form-group">
                <label for="myAbstract">🎯 Kendi Makalenizin Abstract'ı:</label>
                <textarea id="myAbstract" placeholder="Kendi makalenizin özetini buraya yazın..." required></textarea>
            </div>
            
            <div class="form-group">
                <label>📖 Karşılaştırılacak Abstract'lar:</label>
                <div id="compareAbstracts">
                    <div class="compare-abstract">
                        <div class="abstract-number">Abstract 1</div>
                        <textarea name="compareAbstract" placeholder="Karşılaştırılacak abstract 1..." required></textarea>
                    </div>
                </div>
                
                <div class="btn-group">
                    <button type="button" onclick="addAbstract()">➕ Yeni Abstract Ekle</button>
                    <button type="button" onclick="removeAbstract()">➖ Son Abstract'ı Sil</button>
                </div>
            </div>
            
            <div class="btn-group">
                <button type="submit" id="submitBtn">🚀 Karşılaştır</button>
            </div>
        </form>
        
        <div id="result" class="result" style="display: none;"></div>
    </div>

    <script>
        let abstractCount = 1;

        function addAbstract() {
            if (abstractCount >= 10) {
                alert('⚠️ En fazla 10 abstract karşılaştırabilirsiniz.');
                return;
            }
            
            abstractCount++;
            const container = document.getElementById('compareAbstracts');
            const newDiv = document.createElement('div');
            newDiv.className = 'compare-abstract';
            newDiv.innerHTML = `
                <div class="abstract-number">Abstract ${abstractCount}</div>
                <textarea name="compareAbstract" placeholder="Karşılaştırılacak abstract ${abstractCount}..." required></textarea>
            `;
            container.appendChild(newDiv);
        }

        function removeAbstract() {
            if (abstractCount <= 1) {
                alert('⚠️ En az bir karşılaştırma abstract\'ı olmalı.');
                return;
            }
            
            const container = document.getElementById('compareAbstracts');
            container.removeChild(container.lastElementChild);
            abstractCount--;
        }

    document.addEventListener('DOMContentLoaded', () => {
  const checkboxes = document.querySelectorAll('.compare-checkbox');
  const compareBtn = document.getElementById('compareSelected');
  const myAbstractInput = document.getElementById('myAbstract');

  document.getElementById('compareForm').addEventListener('submit', async (e) => {
  e.preventDefault();

  const myAbstract = document.getElementById('myAbstract').value.trim();
  if (!myAbstract) {
    alert('Lütfen kendi özetinizi girin!');
    return;
  }

  const compareAbstracts = Array.from(document.querySelectorAll('textarea[name="compareAbstract"]'))
    .map(t => t.value.trim())
    .filter(v => v.length > 0);

  if (compareAbstracts.length === 0) {
    alert('En az bir karşılaştırılacak abstract girmelisiniz!');
    return;
  }

  try {
    const res = await fetch('/compare-abstracts', {
      method: 'POST',
      headers: {'Content-Type': 'application/json'},
      body: JSON.stringify({ myAbstract, compareAbstracts }),
    });
    const data = await res.json();

    if (data.result) {
      alert('Karşılaştırma sonucu:\n\n' + data.result);
    } else {
      alert('Karşılaştırma yapılamadı.');
    }
  } catch (error) {
    console.error(error);
    alert('Sunucu ile iletişimde hata oluştu.');
  }
});

  function updateButtonState() {
    const anyChecked = Array.from(checkboxes).some(cb => cb.checked);
    const hasMyAbstract = myAbstractInput.value.trim().length > 0;
    compareBtn.disabled = !(anyChecked && hasMyAbstract);
  }

  // Checkbox ve textarea değişimlerini dinle
  checkboxes.forEach(cb => cb.addEventListener('change', updateButtonState));
  myAbstractInput.addEventListener('input', updateButtonState);

  // Sayfa yüklendiğinde buton durumunu ayarla
  updateButtonState();

  // Butona tıklama olayı
  compareBtn.addEventListener('click', () => {
    const myAbstract = myAbstractInput.value.trim();
    if (!myAbstract) {
      alert('Lütfen kendi özetinizi girin!');
      return;
    }

    const selectedAbstracts = Array.from(checkboxes)
      .filter(cb => cb.checked)
      .map(cb => cb.dataset.abstract)
      .filter(abs => abs && abs !== 'Özet bilgisi yok');

    if (selectedAbstracts.length === 0) {
      alert('Lütfen en az bir makale seçin ve özetinin olduğundan emin olun.');
      return;
    }

    fetch('/compare-abstracts', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ myAbstract, compareAbstracts: selectedAbstracts }),
    })
      .then(res => res.json())
      .then(data => {
        if (data.result) {
          alert("Karşılaştırma sonucu:\n\n" + data.result);
        } else {
          alert("Karşılaştırma yapılamadı.");
        }
      })
      .catch(err => {
        console.error(err);
        alert("Sunucu ile iletişimde hata oluştu.");
      });
  });
});


    </script>
</body>
</html>